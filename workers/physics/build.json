{
    "tasks": [
      {
        "name": "Codegen",
        "steps": [
          {
            "name": "Insert custom codegen step here",
            "command": "cargo",
            "arguments": [
              "version"
            ]
          }
        ]
      },
      {
        "name": "Build",
        "steps": [
          {
            "name": "Codegen",
            "arguments": [
              "invoke-task",
              "Codegen"
            ]
          },
          {
            "name": "Cargo build Windows",
            "command": "cargo",
            "arguments": [
                "build",
                "--release",
                "--target",
                "x86_64-pc-windows-msvc"
            ],
            "target": "windows"
          },
          {
            "name": "Cargo build Linux",
            "command": "cargo",
            "arguments": [
                "build",
                "--release",
                "--target",
                "x86_64-unknown-linux-musl"
            ],
            "target": "linux"
          },
          {
            "name": "Spatial Zip Windows",
            "arguments": [
              "file",
              "zip",
              "-b",
              "target/x86_64-pc-windows-msvc/release",
              "-o",
              "../../build/assembly/worker/physics",
              "--worker_platform=windows",
              "physics.exe"
            ],
            "target": "windows"
          },
          {
            "name": "Spatial Zip Linux",
            "arguments": [
              "file",
              "zip",
              "-b",
              "target/x86_64-unknown-linux-gnu/release",
              "-o",
              "../../build/assembly/worker/physics",
              "--worker_platform=linux",
              "physics"
            ],
            "target": "linux"
          }
        ]
      },
      {
        "name": "Clean",
        "steps": [
          {
            "name": "Cargo clean",
            "command": "cargo",
            "arguments": [
              "clean"
            ]
          }
        ]
      }
    ]
  }